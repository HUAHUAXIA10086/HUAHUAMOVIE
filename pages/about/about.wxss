page {
  background-color: #f3f2f3;
}
.about {
  width: 100%;
}
.about .about-user {
  height: 400rpx;
  background-image: linear-gradient(#35a955, #7ebf8f);
  text-align: center;
}
.about .about-user .user-avator {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 30rpx 0 20rpx;
}
.about .about-user .user-name {
  color: #fff;
  font-size: 30rpxs;
}
.about .about-user button {
  border: none;
  background-color: #fff;
  border-radius: 50rpx;
  color: #333;
}
.about .favorite {
  background-color: #fff;
}
.about .favorite .favorite-title {
  font-size: 30rpx;
  padding: 26rpx;
  color: #333;
}
.about .favorite .favorite-list {
  padding: 0 12rpx;
  box-sizing: border-box;
}
.about .favorite .favorite-list .list-item {
  display: inline-block;
  width: 33.33%;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.about .favorite .favorite-list .list-item button {
  font-size: 20rpx;
  width: 100%;
}
.about .favorite .noFavorite {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx 0 50rpx;
}
